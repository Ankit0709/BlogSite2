<%include ./partials/header%>


<div class="card" style="width: 70%; margin: 10px auto;">
    <img class="card-img-top" src="<%=blog.image%>" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title"><%=blog.title%></h5>
        <p class="card-text"><%- blog.body%></p>
        <h6>Created On:<%=blog.created.toDateString()%></h6>
        <a href="/blogs/<%=blog._id%>/edit" class="btn btn-primary">Edit Blog</a>
        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger">Delete Post</button>
        </form>
    </div>
</div>


<%include ./partials/fotter%>