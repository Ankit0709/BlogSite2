<%include ./partials/header%>
<form action="/blogs" method="post">
  <div class="container">
   <div class="jumbotron" id="blog">
        <h1>New Post</h1>
       <div class="form-group has-success has-feedback">
            <label class="control-label" >Title of the Post</label>
            <input type="text" class="form-control" name="blog[title]" placeholder="Enter The Title" required>
       </div>

       <div class="form-group has-success has-feedback">
           <label class="control-label" >Image of the Post</label>
           <input type="text" class="form-control" name="blog[image]" placeholder="Enter the Url of The Image" required>
       </div>

       <div class="form-group has-success has-feedback">
           <label class="control-label" >Description of the Post</label>
            <textarea class="form-control" rows="5" name="blog[body]" placeholder="Enter the description of the post" required></textarea>
       </div>
        <input type="submit" class="btn btn-lg btn-success" value="Submit Post">
   </div>
  </div>
</form>
<%include ./partials/fotter%>